/* ===============================================
   GESTIÓN DE USUARIOS - DISEÑO MODERNO
   Sistema completo de pestañas, cards y modales

   NAMESPACE: #users-module
   Todos los selectores DEBEN comenzar con #users-module
   para evitar conflictos con otros módulos
   =============================================== */

/* Variables específicas del módulo */
#users-module {
  --users-primary: #2563eb;
  --users-secondary: #64748b;
  --users-success: #10b981;
  --users-warning: #f59e0b;
  --users-danger: #ef4444;
  --users-info: #06b6d4;

  --users-gradient-primary: linear-gradient(135deg, var(--users-primary) 0%, #3b82f6 100%);
  --users-gradient-success: linear-gradient(135deg, var(--users-success) 0%, #34d399 100%);
  --users-gradient-warning: linear-gradient(135deg, var(--users-warning) 0%, #fbbf24 100%);
  --users-gradient-danger: linear-gradient(135deg, var(--users-danger) 0%, #f87171 100%);

  --users-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --users-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --users-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --users-shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

/* ===============================================
   LAYOUT PRINCIPAL
   =============================================== */

#users-module.users-management {
  padding: 32px;
  max-width: 1400px;
  margin: 0 auto;
  animation: fadeInUp 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ===============================================
   HEADER PRINCIPAL
   =============================================== */

#users-module .management-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 32px;
  margin-bottom: 40px;
  padding-bottom: 24px;
  border-bottom: 2px solid var(--border);
}

#users-module .header-title-area {
  flex: 1;
  min-width: 0;
}

#users-module .page-title {
  margin: 0 0 12px 0;
  font-size: 2.25rem;
  font-weight: 800;
  background: var(--users-gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.2;
}

#users-module .page-subtitle {
  margin: 0;
  font-size: 1.125rem;
  color: var(--muted);
  font-weight: 500;
  line-height: 1.5;
}

#users-module .header-actions-area {
  display: flex;
  align-items: center;
  gap: 24px;
  flex-shrink: 0;
}

#users-module .quick-stats {
  display: flex;
  gap: 20px;
  padding: 16px 24px;
  background: linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
  border: 1px solid var(--border);
  border-radius: 16px;
  box-shadow: var(--users-shadow-md);
}

#users-module .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  min-width: 60px;
}

#users-module .stat-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text);
  font-variant-numeric: tabular-nums;
}

#users-module .stat-label {
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* ===============================================
   NAVEGACIÓN POR PESTAÑAS
   =============================================== */

#users-module .tabs-navigation {
  position: relative;
  margin-bottom: 32px;
}

#users-module .tabs-container {
  display: flex;
  gap: 8px;
  background: var(--panel-2);
  padding: 8px;
  border-radius: 16px;
  border: 1px solid var(--border);
  box-shadow: var(--users-shadow-sm);
  position: relative;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

#users-module .tabs-container::-webkit-scrollbar {
  display: none;
}

#users-module .tab-button {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px 24px;
  border: none;
  background: transparent;
  color: var(--muted);
  font-size: 0.875rem;
  font-weight: 600;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  white-space: nowrap;
  min-width: 0;
  flex-shrink: 0;
}

#users-module .tab-button:hover {
  color: var(--text);
  background: rgba(37, 99, 235, 0.08);
  transform: translateY(-1px);
}

#users-module .tab-button.active {
  background: linear-gradient(135deg, var(--users-primary) 0%, #3b82f6 100%);
  color: white;
  box-shadow: var(--users-shadow-md);
  transform: translateY(-2px);
}

#users-module .tab-button svg {
  flex-shrink: 0;
  transition: all 0.2s ease;
}

#users-module .tab-button.active svg {
  transform: scale(1.1);
}

#users-module .tab-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 20px;
  height: 20px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  font-size: 0.75rem;
  font-weight: 700;
  margin-left: auto;
  opacity: 0;
  transform: scale(0);
  transition: all 0.3s ease;
}

#users-module .tab-button.active .tab-indicator {
  opacity: 1;
  transform: scale(1);
}

#users-module .tab-underline {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 3px;
  background: var(--users-gradient-primary);
  border-radius: 3px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0;
}

/* ===============================================
   CONTENIDO DE PESTAÑAS
   =============================================== */

#users-module .tabs-content {
  position: relative;
  min-height: 600px;
}

#users-module .tab-panel {
  display: none;
  animation: fadeInUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

#users-module .tab-panel.active {
  display: block;
}

#users-module .panel-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 32px;
  margin-bottom: 32px;
  padding: 24px;
  background: linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
  border: 1px solid var(--border);
  border-radius: 16px;
  box-shadow: var(--users-shadow-md);
}

#users-module .panel-title h2 {
  margin: 0 0 8px 0;
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text);
}

#users-module .panel-title p {
  margin: 0;
  color: var(--muted);
  font-size: 0.875rem;
  font-weight: 500;
}

#users-module .panel-actions {
  display: flex;
  align-items: center;
  gap: 16px;
  flex-shrink: 0;
}

/* ===============================================
   CONTROLES DE FORMULARIO
   =============================================== */

#users-module .search-group {
  position: relative;
  display: flex;
  align-items: center;
}

#users-module .search-group input {
  padding: 12px 16px 12px 44px;
  border: 2px solid var(--border);
  border-radius: 12px;
  background: var(--panel);
  color: var(--text);
  font-size: 0.875rem;
  width: 280px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--users-shadow-sm);
}

#users-module .search-group input:focus {
  outline: none;
  border-color: var(--users-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  background: white;
}

#users-module .search-icon {
  position: absolute;
  left: 16px;
  color: var(--muted);
  pointer-events: none;
}

#users-module .filter-select {
  padding: 12px 16px;
  border: 2px solid var(--border);
  border-radius: 12px;
  background: var(--panel);
  color: var(--text);
  font-size: 0.875rem;
  min-width: 160px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--users-shadow-sm);
}

#users-module .filter-select:focus {
  outline: none;
  border-color: var(--users-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  background: white;
}

/* ===============================================
   BOTONES DE ACCIÓN
   =============================================== */

#users-module .btn-action {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  border: 2px solid var(--border);
  border-radius: 12px;
  background: linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
  color: var(--text);
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--users-shadow-sm);
}

#users-module .btn-action:hover {
  transform: translateY(-2px);
  box-shadow: var(--users-shadow-md);
}

#users-module .btn-action.primary {
  background: var(--users-gradient-primary);
  color: white;
  border-color: transparent;
}

#users-module .btn-action.success {
  background: var(--users-gradient-success);
  color: white;
  border-color: transparent;
}

#users-module .btn-action.warning {
  background: var(--users-gradient-warning);
  color: white;
  border-color: transparent;
}

#users-module .btn-action.danger {
  background: var(--users-gradient-danger);
  color: white;
  border-color: transparent;
}

#users-module .btn-action.small {
  padding: 8px 12px;
  font-size: 0.75rem;
  gap: 6px;
}

/* ===============================================
   ACCIONES DE PERMISOS
   =============================================== */

#users-module .permission-actions {
  margin-top: 12px;
  display: flex;
  gap: 8px;
  justify-content: flex-end;
}

#users-module .cancel-invitation-btn {
  transition: all 0.2s ease;
}

#users-module .cancel-invitation-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

#users-module .cancel-invitation-btn:active {
  transform: translateY(0);
}

/* ===============================================
   ESTADOS DE CONTENIDO
   =============================================== */

#users-module .content-area {
  position: relative;
  min-height: 400px;
}

#users-module .loading-state,
#users-module .error-state,
#users-module .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
  text-align: center;
  color: var(--muted);
}

#users-module .loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid var(--border);
  border-top: 3px solid var(--users-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

#users-module .error-state svg,
#users-module .empty-state svg {
  margin-bottom: 16px;
  color: var(--muted);
}

#users-module .error-state h3,
#users-module .empty-state h3 {
  margin: 0 0 8px 0;
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text);
}

#users-module .error-state p,
#users-module .empty-state p {
  margin: 0;
  font-size: 0.875rem;
  line-height: 1.5;
}

/* ===============================================
   GRIDS DE CONTENIDO
   =============================================== */

#users-module .users-grid,
#users-module .permissions-grid,
#users-module .roles-grid,
#users-module .invitations-grid {
  display: grid;
  gap: 24px;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
}

/* ===============================================
   CARDS DE USUARIOS
   =============================================== */

#users-module .user-card {
  background: linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 24px;
  box-shadow: var(--users-shadow-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

#users-module .user-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--users-shadow-xl);
}

#users-module .user-card-header {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 16px;
}

#users-module .user-avatar {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  background: var(--users-gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 700;
  font-size: 1.25rem;
  box-shadow: var(--users-shadow-md);
}

#users-module .user-info {
  flex: 1;
  min-width: 0;
}

#users-module .user-name {
  margin: 0 0 4px 0;
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

#users-module .user-email {
  margin: 0;
  font-size: 0.875rem;
  color: var(--muted);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

#users-module .user-role-badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: var(--users-shadow-sm);
}

#users-module .user-role-badge.user {
  background: var(--users-gradient-success);
  color: white;
}

#users-module .user-role-badge.doctor {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
  color: white;
}

#users-module .user-role-badge.recepcionista {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: white;
}

#users-module .user-role-badge.admin {
  background: var(--users-gradient-warning);
  color: white;
}

#users-module .user-role-badge.superadmin {
  background: var(--users-gradient-danger);
  color: white;
}

#users-module .user-card-body {
  margin-bottom: 20px;
}

#users-module .user-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.75rem;
  color: var(--muted);
  margin-bottom: 12px;
}

#users-module .user-permissions-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-top: 12px;
}

#users-module .permission-chip {
  padding: 4px 8px;
  background: rgba(37, 99, 235, 0.1);
  color: var(--users-primary);
  border-radius: 8px;
  font-size: 0.6875rem;
  font-weight: 600;
}

#users-module .user-card-actions {
  display: flex;
  gap: 8px;
}

#users-module .card-btn {
  flex: 1;
  padding: 10px 16px;
  border: 1px solid var(--border);
  border-radius: 10px;
  background: var(--panel);
  color: var(--text);
  font-size: 0.8125rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

#users-module .card-btn:hover {
  transform: translateY(-1px);
  box-shadow: var(--users-shadow-sm);
}

#users-module .card-btn.primary {
  background: var(--users-gradient-primary);
  color: white;
  border-color: transparent;
}

#users-module .card-btn.secondary {
  background: linear-gradient(135deg, var(--users-info) 0%, #0891b2 100%);
  color: white;
  border-color: transparent;
}

/* ===============================================
   CARDS DE PERMISOS
   =============================================== */

#users-module .permission-card {
  background: linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 20px;
  box-shadow: var(--users-shadow-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

#users-module .permission-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--users-shadow-lg);
}

#users-module .permission-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12px;
}

#users-module .permission-key {
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--users-primary);
  background: rgba(37, 99, 235, 0.1);
  padding: 4px 8px;
  border-radius: 6px;
}

#users-module .permission-label {
  font-size: 1rem;
  font-weight: 700;
  color: var(--text);
  margin: 8px 0 4px 0;
}

#users-module .permission-description {
  font-size: 0.875rem;
  color: var(--muted);
  line-height: 1.5;
  margin: 0;
}

/* ===============================================
   MODALES
   =============================================== */

#users-module .modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

#users-module .modal-overlay.active {
  opacity: 1;
  visibility: visible;
}

#users-module .modal-overlay.large .modal-container {
  max-width: 800px;
}

#users-module .modal-container {
  background: linear-gradient(135deg, var(--panel) 0%, #fafbfc 100%);
  border-radius: 20px;
  box-shadow: var(--users-shadow-xl);
  max-width: 600px;
  width: 90%;
  max-height: 90vh;
  overflow: hidden;
  transform: translateY(20px) scale(0.95);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

#users-module .modal-overlay.active .modal-container {
  transform: translateY(0) scale(1);
}

#users-module .modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24px 32px;
  border-bottom: 1px solid var(--border);
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.02) 0%, rgba(59, 130, 246, 0.01) 100%);
}

#users-module .modal-header h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text);
}

#users-module .user-info-header {
  display: flex;
  align-items: center;
  gap: 16px;
}

#users-module .user-avatar-large {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  background: var(--users-gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: var(--users-shadow-md);
}

#users-module .modal-close {
  width: 40px;
  height: 40px;
  border: none;
  background: var(--panel-2);
  color: var(--muted);
  border-radius: 10px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

#users-module .modal-close:hover {
  background: var(--users-danger);
  color: white;
}

#users-module .modal-content {
  padding: 32px;
  max-height: 60vh;
  overflow-y: auto;
}

#users-module .modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16px;
  padding: 24px 32px;
  border-top: 1px solid var(--border);
  background: rgba(248, 250, 252, 0.5);
}

/* ===============================================
   FORMULARIOS
   =============================================== */

#users-module .form-grid {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

#users-module .form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

#users-module .form-group label {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text);
}

#users-module .form-group input,
#users-module .form-group select,
#users-module .form-group textarea {
  padding: 12px 16px;
  border: 2px solid var(--border);
  border-radius: 12px;
  background: var(--panel);
  color: var(--text);
  font-size: 0.875rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--users-shadow-sm);
}

#users-module .form-group input:focus,
#users-module .form-group select:focus,
#users-module .form-group textarea:focus {
  outline: none;
  border-color: var(--users-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  background: white;
}

#users-module .field-hint {
  font-size: 0.75rem;
  color: var(--muted);
  font-style: italic;
}

#users-module .info-section {
  margin-top: 24px;
  padding-top: 20px;
  border-top: 1px solid var(--border);
}

#users-module .info-card {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 16px;
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.05) 0%, rgba(59, 130, 246, 0.02) 100%);
  border: 1px solid rgba(37, 99, 235, 0.2);
  border-radius: 12px;
}

#users-module .info-card svg {
  color: var(--users-primary);
  flex-shrink: 0;
  margin-top: 2px;
}

#users-module .info-card strong {
  color: var(--text);
  font-weight: 600;
}

#users-module .info-card p {
  margin: 4px 0 0 0;
  color: var(--muted);
  font-size: 0.875rem;
  line-height: 1.5;
}

/* ===============================================
   SISTEMA DE PERMISOS EN MODAL
   =============================================== */

#users-module .permissions-tabs {
  display: flex;
  gap: 4px;
  margin-bottom: 24px;
  background: var(--panel-2);
  padding: 4px;
  border-radius: 12px;
}

#users-module .perm-tab {
  flex: 1;
  padding: 12px 16px;
  border: none;
  background: transparent;
  color: var(--muted);
  font-size: 0.875rem;
  font-weight: 600;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}

#users-module .perm-tab.active {
  background: var(--users-gradient-primary);
  color: white;
  box-shadow: var(--users-shadow-sm);
}

#users-module .perm-tab-content {
  display: none;
}

#users-module .perm-tab-content.active {
  display: block;
}

#users-module .role-info-card {
  background: var(--panel-2);
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 20px;
}

#users-module .role-info-card h4 {
  margin: 0 0 16px 0;
  font-size: 1rem;
  font-weight: 700;
  color: var(--text);
}

#users-module .permissions-list {
  display: grid;
  gap: 12px;
}

#users-module .permission-item {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 16px;
  background: var(--panel);
  border: 1px solid var(--border);
  border-radius: 12px;
  transition: all 0.2s ease;
}

#users-module .permission-item:hover {
  background: rgba(37, 99, 235, 0.02);
  border-color: rgba(37, 99, 235, 0.2);
}

#users-module .permission-item input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: var(--users-primary);
  margin: 0;
}

#users-module .permission-item-info {
  flex: 1;
  min-width: 0;
}

#users-module .permission-item-key {
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  font-size: 0.8125rem;
  font-weight: 600;
  color: var(--users-primary);
  margin-bottom: 4px;
}

#users-module .permission-item-label {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 2px;
}

#users-module .permission-item-desc {
  font-size: 0.75rem;
  color: var(--muted);
  line-height: 1.4;
}

/* ===============================================
   BOTONES DE MODAL
   =============================================== */

#users-module .btn-primary,
#users-module .btn-secondary {
  padding: 12px 24px;
  border-radius: 12px;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  gap: 8px;
  position: relative;
  overflow: hidden;
}

#users-module .btn-primary {
  background: var(--users-gradient-primary);
  color: white;
  border: 2px solid transparent;
  box-shadow: var(--users-shadow-md);
}

#users-module .btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: var(--users-shadow-lg);
}

#users-module .btn-secondary {
  background: var(--panel);
  color: var(--text);
  border: 2px solid var(--border);
}

#users-module .btn-secondary:hover {
  background: var(--panel-2);
  border-color: var(--muted);
  transform: translateY(-1px);
}

#users-module .btn-spinner {
  display: none;
}

#users-module .btn-text {
  transition: opacity 0.2s ease;
}

/* Estados de botón con loading */
#users-module .btn-primary.loading .btn-text {
  opacity: 0;
}

#users-module .btn-primary.loading .btn-spinner {
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* ===============================================
   TOOLTIP DINÁMICO
   =============================================== */

#users-module .tooltip-container {
  position: absolute;
  z-index: 9999;
  background: rgba(15, 23, 42, 0.95);
  color: white;
  padding: 12px 16px;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 500;
  line-height: 1.4;
  max-width: 280px;
  box-shadow: var(--users-shadow-xl);
  backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  opacity: 0;
  visibility: hidden;
  transform: translateY(4px);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

#users-module .tooltip-container.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

/* ===============================================
   ANIMACIONES
   =============================================== */

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* ===============================================
   RESPONSIVE DESIGN
   =============================================== */

@media (max-width: 1200px) {
  #users-module .users-management {
    padding: 24px;
  }
  
  #users-module .management-header {
    flex-direction: column;
    align-items: stretch;
    gap: 24px;
  }
  
  #users-module .header-actions-area {
    justify-content: space-between;
  }
  
  #users-module .quick-stats {
    gap: 16px;
  }
}

@media (max-width: 768px) {
  #users-module .users-management {
    padding: 16px;
  }
  
  #users-module .page-title {
    font-size: 1.875rem;
  }
  
  #users-module .page-subtitle {
    font-size: 1rem;
  }
  
  #users-module .header-actions-area {
    flex-direction: column;
    align-items: stretch;
    gap: 16px;
  }
  
  #users-module .quick-stats {
    justify-content: center;
  }
  
  #users-module .panel-header {
    flex-direction: column;
    align-items: stretch;
    gap: 20px;
    padding: 20px;
  }
  
  #users-module .panel-actions {
    flex-direction: column;
    gap: 12px;
  }
  
  #users-module .search-group input {
    width: 100%;
  }
  
  #users-module .users-grid,
  #users-module .permissions-grid,
  #users-module .roles-grid,
  #users-module .invitations-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  #users-module .modal-container {
    width: 95%;
    max-height: 95vh;
  }
  
  #users-module .modal-header,
  #users-module .modal-content,
  #users-module .modal-footer {
    padding-left: 20px;
    padding-right: 20px;
  }
  
  #users-module .form-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 640px) {
  #users-module .tabs-container {
    padding: 6px;
  }
  
  #users-module .tab-button {
    padding: 12px 16px;
    font-size: 0.8125rem;
  }
  
  #users-module .tab-button span {
    display: none;
  }
  
  #users-module .user-card {
    padding: 20px;
  }
  
  #users-module .user-card-actions {
    flex-direction: column;
  }
  
  #users-module .modal-header h3 {
    font-size: 1.125rem;
  }
  
  #users-module .modal-content {
    padding: 24px 20px;
  }
}

/* ===============================================
   UTILIDADES
   =============================================== */

#users-module .hidden {
  display: none !important;
}

/* Campos específicos para doctores */
#users-module .doctor-only {
  transition: all 0.3s ease;
}

#users-module .doctor-only.hidden {
  display: none !important;
}

#users-module .doctor-only.show {
  display: block !important;
  animation: fadeInUp 0.3s ease;
}

/* Ajustes para el formulario de doctores */
#users-module .form-grid .doctor-only {
  grid-column: 1 / -1;
}

@media (min-width: 768px) {
  #users-module .form-grid .doctor-only {
    grid-column: auto;
  }
}

#users-module .sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Estados de acceso denegado */
#users-module .access-denied {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
  text-align: center;
  color: var(--muted);
  min-height: 400px;
}

#users-module .access-denied-icon {
  font-size: 4rem;
  margin-bottom: 20px;
  opacity: 0.6;
}

#users-module .access-denied h3 {
  color: var(--text);
  margin: 0 0 12px 0;
  font-size: 1.5rem;
  font-weight: 600;
}

#users-module .access-denied p {
  margin: 0 0 8px 0;
  font-size: 1rem;
  line-height: 1.5;
}